<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <!-- Display Order Details -->
  <div class="order-details">
    <h3>Order Details:</h3>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Line Item Total</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td>
              <%= image_tag line_item.product.image.thumb.url, alt: line_item.product.name, class: 'img-thumbnail' %>
              <%= line_item.product.name %>
            </td>
            <td><%= line_item.product.description %></td>
            <td><%= line_item.quantity %></td>
            <td><%= humanized_money_with_symbol Money.new(line_item.item_price_cents * line_item.quantity, "USD") %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">Total:</th>
          <th><%= humanized_money_with_symbol @order.total %></th>
        </tr>
      </tfoot>
    </table>
  </div>

  <!-- Display Email Used -->
  <div class="order-email">
    <h3>Email Used:</h3>
    <p><%= @order.email %></p>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>