<section class="admin-dashboard" id="adminDashboard">
  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <div class="stats">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title">Products</h3>
            <p class="card-text">Total Products: <%= @product_count %></p>
            <%= link_to 'View Products', admin_products_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title">Categories</h3>
            <p class="card-text">Total Categories: <%= @category_count %></p>            
            <!-- Button to Toggle Categories List -->
            <button id="toggleCategories" class="btn btn-primary">Categories</button>
            
            <div class="categories-list" id="categoriesList" style="display: none;">
              <h2>Categories</h2>
              <ul>
                <% @categories.each do |category| %>
                  <li><%= category.name %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
